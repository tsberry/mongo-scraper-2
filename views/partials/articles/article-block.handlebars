<div class="panel panel-default">
    <div class="panel-heading">
        <a href="https://animenewsnetwork.com{{article.link}}">
            <h3 class="panel-title">{{article.headline}}</h3>
        </a>
    </div>
    <div class="panel-body">
        <p>{{article.summary}}</p>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-{{_id}}">
            View Comments
        </button>
        {{#if pin}}
            {{#if article.pinned}}
            <button type="button" class="btn btn-success pin-button" disabled="true">
                Already Pinned
            </button>
            {{/if}}
            {{#unless article.pinned}}
            <button type="button" class="btn btn-success pin-button" data-id="{{article._id}}">
                Pin Article
            </button>
            {{/unless}}
        {{/if}}
    </div>
</div>
<div class="modal fade" id="modal-{{article._id}}" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Comments</h4>
            </div>
            <div class="modal-body">
                <div id="{{article._id}}-comments">
                    {{#each article.comments}}{{> comment}} {{/each}}
                </div>
                <div class="form-group">
                    <form data-id="{{article._id}}" class="comment-form">
                        <textarea class="form-control comment-text"></textarea>
                        <input class="form-control btn btn-success" type="submit" value="Submit Comment">
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->